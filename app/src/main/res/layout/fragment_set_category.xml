<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SetCategoryFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_total"
        android:layout_width="match_parent"
        android:layout_height="222dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_settime_dialog"
        android:paddingHorizontal="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_layout_top"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_marginTop="46dp"
            android:src="@drawable/layout_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_set_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/grold_rounded_slim"
            tools:text="10S"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/img_layout_top"
            app:layout_constraintEnd_toEndOf="@id/img_layout_top"
            app:layout_constraintStart_toStartOf="@id/img_layout_top"
            app:layout_constraintTop_toTopOf="@id/img_layout_top" />

        <ImageView
            android:id="@+id/ic_down_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:padding="12dp"
            android:src="@drawable/ic_down_button"
            app:layout_constraintBottom_toBottomOf="@id/tv_set_time"
            app:layout_constraintEnd_toEndOf="@id/img_layout_top"
            app:layout_constraintTop_toTopOf="@id/tv_set_time" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete"
        android:elevation="12dp"
        app:layout_constraintBottom_toTopOf="@id/layout_total"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/layout_total" />

    <ImageView
        android:id="@+id/tv_title"
        android:layout_width="242dp"
        android:layout_height="100dp"
        android:src="@drawable/bg_set_category_text"
        app:layout_constraintBottom_toTopOf="@id/layout_total"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/layout_total" />

    <LinearLayout
        android:id="@+id/btnOK"
        android:layout_width="305dp"
        android:layout_height="70dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/white_rounded_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="9dp"
        android:paddingHorizontal="24dp"
        app:layout_constraintBottom_toBottomOf="@id/layout_total"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tesst1"
            android:fontFamily="@font/grold_rounded_slim"
            android:gravity="center"
            android:text="OK"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>