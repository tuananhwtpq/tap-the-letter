<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    tools:context=".activities.Testing_2_Activity">

    <View
        android:id="@+id/centerAnchor"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/centerContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnGo"
            android:layout_width="274dp"
            android:layout_height="274dp"
            android:background="@drawable/bg_layout_3"
            android:text="GO"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.example.baseproject.activities.CircularProgressView
            android:id="@+id/progress_circular"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/btnGo"
            app:layout_constraintEnd_toEndOf="@id/btnGo"
            app:layout_constraintStart_toStartOf="@id/btnGo"
            app:layout_constraintTop_toTopOf="@id/btnGo" />


        <ImageView
            android:id="@+id/ic_star"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/bg_star_2"
            app:layout_constraintBottom_toBottomOf="@id/btnGo"
            app:layout_constraintEnd_toEndOf="@id/btnGo"
            app:layout_constraintStart_toStartOf="@id/btnGo"
            app:layout_constraintTop_toTopOf="@id/btnGo" />

        <TextView
            android:id="@+id/tv_tap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TAP"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@id/ic_star"
            app:layout_constraintEnd_toEndOf="@id/ic_star"
            app:layout_constraintStart_toStartOf="@id/ic_star"
            app:layout_constraintTop_toTopOf="@id/ic_star" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>